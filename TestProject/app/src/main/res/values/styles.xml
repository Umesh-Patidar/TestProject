<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavText">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>


    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <style name="AppThemes" parent="AppBaseTheme">
        <item name="android:actionButtonStyle">@style/MyActionButtonStyle</item>
    </style>

    <style name="MyActionButtonStyle" parent="AppBaseTheme">
       <item name="android:paddingStart">5dp</item>
       <item name="android:paddingEnd">5dp</item>
    </style>

    <style name="style_button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="textSize_small" parent="text_view_style">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_view_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="textSize_large" parent="text_view_style">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSize_medium" parent="text_view_style">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_down</item>
    </style>
</resources>
